<%= stylesheet_link_tag "sceneries", :media => "all" %>
    <body id="page-top">
        <section class="projects-section bg-light" id="projects">
            <div class="container px-4 px-lg-5">
                <!-- Featured Project Row-->
                <div class="row gx-0 mb-4 mb-lg-5">
                    <div class="cool-lg-7">
                        <%= image_tag @scenery.get_scenrery_image, class:"img-fluid mb-3 mb-lg-0" %>
                    </div>
                    <div class="cool-lg-5">
                        <div class="featured-text text-center text-lg-left">
                          <h3>タイトル　:　<%= @scenery.name %></h3>
                        </div>
                        <div class="featured-text text-lg-left">
                          <h4>
                            説明<br>
                            <%= @scenery.introduction %></p>
                          </h4>

                        </div>
                    </div>
                </div>


            <%= render "public/scenery_comments/counter", scenery: @scenery %>
<% if @scenery.user == current_user %>
 <%= link_to '編集', edit_scenery_path(@scenery) %>
 <%= link_to 'Destroy', scenery_path(@scenery), method: :delete, "data-confirm" => "本当に消しますか?", class:"btn btn-sm btn-danger" %>
 <%= link_to 'マイページへ', user_path(current_user.id) %>
<% else %>
 <%= link_to '投稿者', user_path(@user) %>
<% end %>
 <span id=<%= "favorite_buttons_" + @scenery.id.to_s %> >
<%= render "public/favorites/favorite", scenery: @scenery %>
</span>
 <%= @scenery.user.name %>

<div class="public-scenery-comments-index">
<%= render "public/scenery_comments/index", scenery: @scenery %>
</div>
<%= render "public/scenery_comments/form", scenery: @scenery, scenery_comment: @scenery_comment %>



