
<h5>
<%= image_tag @scenery.get_scenrery_image(250,250) %>
  タイトル
  <%= @scenery.name %>
  説明
  <%= @scenery.introduction %>
  ジャンル
  <%= @scenery.genre.genre_name if @scenery.genre.present? %>
</h5>
<% if @scenery.user == current_user %>
 <%= link_to '編集', edit_scenery_path(@scenery) %>
 <%= link_to 'Destroy', scenery_path(@scenery), method: :delete, "data-confirm" => "本当に消しますか?", class:"btn btn-sm btn-danger" %>
<% end %>
<% if @scenery.user == current_user %>
 <%= link_to 'マイページへ', user_path(current_user.id) %>
<% else %>
 <%= link_to '投稿者', user_path(current_user.id) %>
 <% end %>
 <td class=<%= "favorite_buttons_" + @scenery.id.to_s %> >
<%= render "public/favorites/favorite", scenery: @scenery %>
</td>