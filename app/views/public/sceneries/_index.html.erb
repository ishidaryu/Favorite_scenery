<section class="projects-sections " id="projects">
  <div class="container px-4 px-lg-5">
    <div class="row gx-0 mb-4 mb-lg-5 ">
        <div class="cool-lg-7">
      <%= link_to  scenery_path(sceneries) do %>
        <%= image_tag sceneries.get_scenrery_image, class:"img-fluid mb-3 mb-lg-0" %>
        </div>
        <div class="featured-text ">
          <h3 class="text-left text-black">タイトル：<%= sceneries.name%></h3>
          <h4 class="col-2 text-truncates text-black mb-0">説明　：<%= sceneries.introduction.truncate(20) %></h4>
        </div>
      <% end %>
      <%#ゲストログインの制限 %>
      <% if user_signed_in? && current_user.id == 1 %>
      <% else %>
        <div id=<%= "favorite_buttons_" + sceneries.id.to_s %> >
          <%# 言い値機能 %>
          <%= render "public/favorites/favorite", scenery: sceneries %>
        </div>
      <% end %>
    </div>
  </div>