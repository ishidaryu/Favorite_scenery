    <%= image_tag sceneries.get_scenrery_image(250,250), class: "img-fluid" %>
  </div>
  <div class="col-lg-6">
  <div class="bg-black text-center h-100 project">
    <div class="d-flex h-100">
      <div class="project-text w-100 my-auto text-center text-lg-left">
        <h4 class="text-white">
          <%= sceneries.name %>
           <div id=<%= "favorite_buttons_" + sceneries.id.to_s %> >
             <%= render "public/favorites/favorite", scenery: sceneries %>
           </div>
        </h4>
        <p class="mb-0 text-white-50"><%= sceneries.genre.genre_name if sceneries.genre.present? %></p>
        <hr class="d-none d-lg-block mb-0 ms-0" />
      </div>
    </div>
  </div>
  </div>
