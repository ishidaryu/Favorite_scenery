<!DOCTYPE html>
<html>
  <head>
    <title>FavoriteScenery</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <script src="https://kit.fontawesome.com/73f09fc4b1.js" crossorigin="anonymous"></script>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag  'application', media: 'all', 'data-turbolinks-track': 'reload' %>

  </head>

    <header>
          <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">

      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="fales"  aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">

        <div class=" mb-2">
        <%= render 'public/searches/serach' %>
        </div>

        <% if admin_signed_in? %>
          <li>
            <%= link_to admin_genres_path, class:" nav-link text-light" do %>
              <i class=""></i>ジャンルぺージ
            <% end %>
          </li>

          <li>
            <%= link_to admin_users_path, class:" nav-link text-light" do %>
              <i class=""></i>ユーザー一覧
            <% end %>
          </li>

          <li>
            <%= link_to destroy_admin_session_path, method: :delete, class:" nav-link text-light" do %>
              <i class=""></i>ログアウト
            <% end %>
          </li>

        <% elsif user_signed_in? %>

          <li>
            <%= link_to root_path, class:" nav-link text-light" do %>
              <i class="fa-solid fa-house"></i>TOPぺージ
            <% end %>
          </li>

          <li>
            <%= link_to user_path(current_user.id), class:" nav-link text-light" do %>
              <i class=""></i>マイページ
            <% end %>
          </li>

          <li>
            <%= link_to sceneries_path, class:" nav-link text-light" do %>
              投稿一覧
            <% end %>
          </li>

          <li>
            <%= link_to destroy_user_session_path, method: :delete, class:" nav-link text-light" do %>
              <i class="fas fa-sign-out-alt"></i>Log out
            <% end %>
          </li>

          <li>
            <%= link_to favorites_user_path(current_user.id), class:" nav-link text-light" do %>
              いいね一覧
            <% end %>
          </li>

          <li>
            <%= link_to new_contact_path(user_id: current_user.id), class:" nav-link text-light" do %>
              お問い合わせ
            <% end %>
          </li>

          <% else %>

            <li>
              <%= link_to root_path, class:" nav-link text-light" do %>
                <i class="fa-solid fa-house"></i>TOPぺージ
              <% end %>
            </li>


          <li>
            <%= link_to new_user_registration_path, class:'nav-link text-light' do %>
              <i class="fas fa-user-plus"></i>Sign up
            <% end %>
          </li>

          <li>
            <%= link_to new_user_session_path, class:'nav-link text-light' do %>
              <i class="fas fa-sign-in-alt"></i>Log in
            <% end %>
          </li>

          <li>
            <%= link_to users_guest_sign_in_path, method: :post, class:'nav-link text-light' do %>
              <i class="fa-solid fa-users"></i>ゲストログイン
            <% end %>
          </li>

          <% end %>

    </header>
  <body>
    <%= yield %>
  </body>
</html>